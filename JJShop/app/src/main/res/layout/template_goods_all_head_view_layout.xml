<?xml version="1.0" encoding="utf-8"?>
<com.jjshop.template_view.TemplateGoodsAllHeadView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_all_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--banner-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/temp_all_head_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout android:id="@+id/temp_all_head_point"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/temp_all_head_viewpager"
            android:layout_alignLeft="@+id/temp_all_head_viewpager"
            android:layout_alignRight="@+id/temp_all_head_viewpager">
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <!--邀请开店-->
    <LinearLayout android:id="@+id/m_layout_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/temp_all_head_open_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <View android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp_all_head_open_shop">
        <!--三图模板-->
        <ImageView android:id="@+id/temp_all_head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>

        <ImageView android:id="@+id/temp_all_head_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

        <ImageView android:id="@+id/temp_all_head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <!--没有数据时，显示一个有高度的view，解决下拉不能刷新问题-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
</com.jjshop.template_view.TemplateGoodsAllHeadView>
