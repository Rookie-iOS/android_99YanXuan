<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--背景图-->
    <ImageView android:id="@+id/m_iv_bg"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:scaleType="fitXY"
        android:background="@mipmap/img_shop_person_top_bg"/>
    <!--弧度图-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@mipmap/img_shop_bg_hudu"
        android:layout_alignBottom="@+id/m_iv_bg"
        android:layout_alignLeft="@+id/m_iv_bg"
        android:layout_alignRight="@+id/m_iv_bg"/>
    <!--头像-->
    <ImageView android:id="@+id/m_iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="12dp"
        android:layout_alignBottom="@+id/m_iv_bg"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circle_head_border_white_select"/>

    <RelativeLayout android:id="@+id/m_layout_bjdp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/m_iv_head"
        android:layout_alignTop="@+id/m_iv_head"
        android:layout_alignBottom="@+id/m_iv_head">

        <TextView android:id="@+id/m_tv_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/m_tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/m_tv_shopname"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="@color/color_ff0000"
            android:textSize="10dp"
            android:background="@mipmap/img_shop_lv"/>

        <TextView android:id="@+id/m_tv_mobile_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:gravity="left"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"/>

        <TextView android:id="@+id/m_tv_edit_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:text="编辑店铺"/>

        <ImageView android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_jiantou_right_white"
            android:layout_marginRight="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>
