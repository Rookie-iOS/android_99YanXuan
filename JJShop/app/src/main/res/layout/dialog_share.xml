<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/ly_share_weichat"
            style="@style/dialog_content_share_ll" >

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/umeng_socialize_wechat"
                android:text="@string/platform_weichat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_share_weichat_circle"
            style="@style/dialog_content_share_ll" >

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/umeng_socialize_wxcircle"
                android:text="@string/platform_weichat_circle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_share_qq"
            style="@style/dialog_content_share_ll" >

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/save_img"
                android:text="二维码" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/ly_share_qqzone"
            style="@style/dialog_content_share_ll" >

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/share_url"
                android:text="复制链接" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_share_sina"
            style="@style/dialog_content_share_ll" >

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/share_img"
                android:text="复制图片" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/share_cancel"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/share_back_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/share_cancel"
            android:textColor="@color/share_gray"
            android:textSize="@dimen/text_size_17" />
    </RelativeLayout>

</LinearLayout>