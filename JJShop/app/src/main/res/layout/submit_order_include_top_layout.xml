    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_ededed"/>

    <!--优惠券-->
    <RelativeLayout android:id="@+id/m_layout_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView android:id="@+id/tv_dis_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_1b1b1b"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/img_submit_order_discount_icon"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="优惠券"/>

        <TextView android:id="@+id/m_tv_discount_quan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="right"
            android:textColor="@color/color_1b1b1b"
            android:layout_toRightOf="@+id/tv_dis_quan"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/m_iv_discount_jiantou"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

        <ImageView android:id="@+id/m_iv_discount_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_jiantou_right_block"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
