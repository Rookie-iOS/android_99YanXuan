<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_gravity="center_vertical">
        <ImageView android:id="@+id/m_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/hongbao_close"/>

        <RelativeLayout
            android:id="@+id/center_bg"
            android:layout_marginTop="20dp"
            android:layout_below="@id/m_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hongbao_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/hongbao_bg" />
            <ImageView
                android:id="@+id/head_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="120dp"
                android:padding="2dp"
                android:background="@drawable/hongbao_corner"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_marginTop="5dp"
                android:layout_below="@id/head_icon"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/word_container"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/hongbao_left_icon"/>
                <TextView
                    android:id="@+id/hong_bao_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:textColor="#fef0b2"
                    android:textSize="20sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/hong_bao_word"
                    android:src="@mipmap/hongbao_right_icon"/>
            </RelativeLayout>
            
            <ImageView
                android:id="@+id/er_wei_ma"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/word_container"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_below="@id/er_wei_ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="长按识别二维码去我的店铺购物吧"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/hongbao_save"
            android:layout_below="@id/center_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/hongbao_btn"/>

    </RelativeLayout>

</LinearLayout>
