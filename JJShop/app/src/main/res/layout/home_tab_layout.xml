<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/m_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_centerInParent="true"/>

    <View android:id="@+id/m_view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_d6004f"
        android:layout_alignLeft="@+id/m_tv_title"
        android:layout_alignRight="@+id/m_tv_title"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>

    <!--购物车数量-->
    <TextView
        android:id="@+id/m_tv_num"
        style="@style/cirle_num_style"
        android:layout_alignTop="@+id/m_tv_title"
        android:layout_alignRight="@+id/m_tv_title"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-5dp"/>

</RelativeLayout>
