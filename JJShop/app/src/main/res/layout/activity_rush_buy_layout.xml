<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_d4382b">
        <ImageView android:id="@+id/m_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_rushbuy_back_white"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="127dp"
            android:layout_height="35dp"
            android:src="@mipmap/img_rushbuy_title_img"
            android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/m_iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:src="@mipmap/img_rush_share"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/m_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingBottom="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabPaddingTop="0dp"
        android:layout_below="@+id/layout_top"
        android:background="@color/color_d4382b"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/m_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/m_tablayout"/>

    <include android:id="@+id/layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/include_loading_empty_error_layout"
        android:layout_below="@+id/layout_top"/>

</RelativeLayout>
