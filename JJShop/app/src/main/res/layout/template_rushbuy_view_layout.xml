<?xml version="1.0" encoding="utf-8"?>
<com.jjshop.template_view.TemplateRushBuyView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_rushbuy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView android:id="@+id/rush_iv_img"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@color/black"/>

    <TextView android:id="@+id/rush_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_333333"
        android:layout_toRightOf="@+id/rush_iv_img"
        android:layout_alignTop="@+id/rush_iv_img"
        android:includeFontPadding="false"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView android:id="@+id/rush_tv_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/color_666666"
        android:layout_toRightOf="@+id/rush_iv_img"
        android:layout_alignBottom="@+id/rush_iv_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rush_tv_old_price"
        android:layout_toRightOf="@+id/rush_iv_img">
        <TextView android:id="@+id/rush_tv_price_biaoshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_d4382b"
            android:layout_gravity="bottom"
            android:text="¥"/>

        <TextView android:id="@+id/rush_tv_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/color_d4382b"
            android:layout_toRightOf="@+id/rush_tv_price_biaoshi"
            android:includeFontPadding="false"
            android:layout_gravity="bottom"
            android:text="38.0"/>
    </LinearLayout>


    <TextView android:id="@+id/rush_tv_buy"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/rushbuy_yuanjiao_true_select"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/rush_iv_img"
        android:layout_marginRight="20dp"
        android:text="立即抢购"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_cccccc"
        android:layout_below="@+id/rush_iv_img"/>


</com.jjshop.template_view.TemplateRushBuyView>
