<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/m_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"/>

    <ImageView android:id="@+id/m_iv_big_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView android:id="@+id/m_tv_curr_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/color_8a8c8f"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/m_tv_all_num"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@+id/m_tv_all_num"
        android:text="0"/>

    <TextView android:id="@+id/m_tv_all_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_8a8c8f"
        android:layout_alignParentRight="true"
        android:text="/0"/>

    <ImageView android:id="@+id/m_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@mipmap/img_goods_info_guige_close"
        android:layout_alignParentLeft="true"
        />
</RelativeLayout>