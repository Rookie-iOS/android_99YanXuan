<?xml version="1.0" encoding="utf-8"?>
<com.jjshop.template_view.TemplateOrderBottomView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_order_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView android:id="@+id/m_tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="13dp"
        android:layout_below="@+id/m_layout_goods"
        android:layout_marginLeft="10dp"/>

    <TextView android:id="@+id/m_tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="15dp"
        android:layout_below="@+id/m_layout_goods"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <TextView android:id="@+id/m_tv_order_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="15dp"
        android:layout_below="@+id/m_layout_goods"
        android:layout_toLeftOf="@+id/m_tv_order_price"/>

    <View android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_ededed"
        android:layout_below="@+id/m_tv_order_num"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView android:id="@+id/m_tv_order_left"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:background="@drawable/yuanjiao_bg_white_frame_cecece_select"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/m_tv_order_center"
        android:layout_below="@+id/view_line_two"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:text="取消订单"/>

    <TextView android:id="@+id/m_tv_order_center"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:background="@drawable/yuanjiao_bg_white_frame_cecece_select"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/m_tv_order_right"
        android:layout_below="@+id/view_line_two"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:text="订单详情"/>

    <TextView android:id="@+id/m_tv_order_right"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:layout_alignParentRight="true"
        android:background="@drawable/yuanjiao_bg_white_frame_cecece_select"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/view_line_two"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:text="支付订单"/>

</com.jjshop.template_view.TemplateOrderBottomView>
