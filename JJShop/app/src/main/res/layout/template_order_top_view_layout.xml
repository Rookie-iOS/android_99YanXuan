<?xml version="1.0" encoding="utf-8"?>
<com.jjshop.template_view.TemplateOrderTopView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_order_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <View android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/bg"/>
    <!--顶部-->
    <RelativeLayout android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/view_line"
        android:paddingRight="10dp">
        <ImageView android:id="@+id/m_iv_shop_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_order_shop_icon"
            android:layout_centerVertical="true"/>
        
        <TextView android:id="@+id/m_tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/m_iv_shop_icon"
            android:layout_toLeftOf="@+id/m_tv_order_status"/>

        <TextView android:id="@+id/m_tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/color_d6004f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_ededed"
        android:layout_below="@+id/layout_top"/>

</com.jjshop.template_view.TemplateOrderTopView>
