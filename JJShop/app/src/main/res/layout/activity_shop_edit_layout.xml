<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <include
        android:id="@+id/layout_top"
        layout="@layout/include_title_layout"/>

    <!--店名-->
    <RelativeLayout android:id="@+id/m_layout_shop_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="店名"/>

        <TextView android:id="@+id/m_tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_8a8c8f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:drawableRight="@mipmap/img_jiantou_right_block"
            android:gravity="center_vertical"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:text="dsadsa"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_layout_shop_name"
        android:background="@color/color_ededed"/>

    <!--店铺简介-->
    <RelativeLayout android:id="@+id/m_layout_shop_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view_line_one">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="店铺简介"/>

        <TextView android:id="@+id/m_tv_shop_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_8a8c8f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:drawableRight="@mipmap/img_jiantou_right_block"
            android:gravity="center_vertical"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:text="dsadsa"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_layout_shop_info"
        android:background="@color/color_ededed"/>

    <!--店铺头像-->
    <RelativeLayout android:id="@+id/m_layout_shop_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view_line_two">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="头像"/>

        <ImageView android:id="@+id/iv_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/img_jiantou_right_block" />

        <ImageView android:id="@+id/m_iv_shop_head"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_toLeftOf="@+id/iv_jiantou"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_head_border_white_select"
            android:layout_marginRight="7dp"
            android:src="@mipmap/img_shop_default_head"/>

    </RelativeLayout>

    <include
        android:id="@+id/m_view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/include_loading_layout"
        android:layout_below="@+id/layout_top"
        android:visibility="gone"/>

</RelativeLayout>
