<?xml version="1.0" encoding="utf-8"?>
<com.jjshop.template_view.TemplateCouponTopView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_coupon_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <View android:id="@+id/view_top_margin"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/bg"/>

    <EditText android:id="@+id/m_et_coupon_code"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:textSize="15dp"
        android:layout_below="@+id/view_top_margin"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:background="@drawable/yuanjiao_f4f4f4_select"
        android:layout_toLeftOf="@+id/m_tv_duihuan"
        android:hint="请输入优惠码"/>

    <TextView android:id="@+id/m_tv_duihuan"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/yuanjiao_d6004f_select"
        android:layout_below="@+id/view_top_margin"
        android:textColor="@color/white"
        android:text="兑换"/>

    <ImageView android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/m_et_coupon_code"
        android:src="@mipmap/img_line_xu_icon"/>
</com.jjshop.template_view.TemplateCouponTopView>
