<?xml version="1.0" encoding="utf-8"?>
<com.jjshop.template_view.TemplateOrderItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_order_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--图片-->
    <ImageView android:id="@+id/m_iv_img"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="10dp"/>

    <!--标题-->
    <TextView android:id="@+id/m_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/color_1b1b1b"
        android:layout_alignTop="@+id/m_iv_img"
        android:layout_toRightOf="@+id/m_iv_img"
        android:layout_marginRight="10dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!--规格-->
    <TextView android:id="@+id/m_tv_guige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/color_8a8c8f"
        android:layout_toRightOf="@+id/m_iv_img"
        android:layout_toLeftOf="@+id/m_tv_num"
        android:layout_below="@+id/m_tv_title"
        android:layout_marginRight="10dp"
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <!--数量-->
    <TextView android:id="@+id/m_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_1b1b1b"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/m_tv_order_tui"
        android:layout_marginRight="10dp"/>

    <!--价格-->
    <TextView
        android:id="@+id/m_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/m_iv_img"
        android:layout_toRightOf="@+id/m_iv_img"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:layout_marginRight="5dp"
        android:textColor="@color/color_d6004f"/>

    <TextView
        android:id="@+id/m_tv_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_alignBottom="@+id/m_tv_price"
        android:layout_toRightOf="@+id/m_tv_price"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/color_8a8c8f"/>

    <!--退款、退货、退款中-->
    <TextView android:id="@+id/m_tv_order_tui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:background="@drawable/yuanjiao_bg_white_frame_cecece_select"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/m_iv_img"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:maxLength="5"
        android:visibility="invisible"
        android:text="退款"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_iv_img"
        android:layout_marginTop="10dp"
        android:background="@color/color_ededed"/>

</com.jjshop.template_view.TemplateOrderItemView>
