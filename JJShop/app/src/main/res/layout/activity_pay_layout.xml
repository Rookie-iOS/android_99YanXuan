<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <include
        android:id="@+id/layout_top"
        layout="@layout/include_title_layout"/>

    <ScrollView android:id="@+id/m_layout_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <RelativeLayout  android:id="@+id/pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">
                    <TextView android:id="@+id/m_tv_status"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_2897d4_select"
                        />
                    <ImageView android:id="@+id/m_iv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/img_pay_finish_success"/>
                </RelativeLayout>

                <TextView android:id="@+id/m_tv_pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_2897d4"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="14dp"
                    android:layout_below="@+id/pay_status"
                    android:text="支付成功"/>

                <TextView android:id="@+id/m_tv_pay_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/color_1b1b1b"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/m_tv_pay_status"
                    android:text="¥23"/>

                <View android:id="@+id/view_line"
                    android:layout_width="0.5dp"
                    android:layout_height="15dp"
                    android:background="@color/color_ededed"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@+id/m_tv_left"
                    android:layout_alignBottom="@+id/m_tv_left"
                    android:layout_marginBottom="15dp"
                    android:layout_below="@+id/m_tv_pay_money"
                    />

                <TextView android:id="@+id/m_tv_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/color_1b1b1b"
                    android:layout_toLeftOf="@+id/view_line"
                    android:layout_below="@+id/m_tv_pay_money"
                    android:paddingBottom="15dp"
                    android:text="查看订单"/>

                <TextView android:id="@+id/m_tv_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/color_1b1b1b"
                    android:layout_toRightOf="@+id/view_line"
                    android:layout_below="@+id/m_tv_pay_money"
                    android:paddingBottom="15dp"
                    android:text="返回首页"/>
            </RelativeLayout>

            <!--广告位-->
            <ImageView android:id="@+id/m_iv_details_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_8a8c8f"
                android:text="——   你可能还喜欢   ——"
                android:layout_marginBottom="10dp"/>

            <com.jjshop.widget.MyGridView
                android:id="@+id/m_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:numColumns="2"/>
        </LinearLayout>
    </ScrollView>

    <include android:id="@+id/layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top"
        layout="@layout/include_loading_empty_error_layout"/>

    <ImageView android:id="@+id/m_iv_activity"
        style="@style/activity_fuchuang_style"/>

</RelativeLayout>
