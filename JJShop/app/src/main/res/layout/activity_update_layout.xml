<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <include
        android:id="@+id/layout_top"
        layout="@layout/include_title_layout"/>
    <EditText android:id="@+id/m_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="left|top"
        android:layout_marginTop="7dp"
        android:textSize="15sp"
        android:textColor="@color/color_1b1b1b"
        android:textColorHint="@color/color_8a8c8f"
        android:layout_below="@+id/layout_top"/>

    <TextView android:id="@+id/m_tv_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        android:layout_below="@+id/m_et_content"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:textColor="@color/color_8a8c8f"/>

    <RelativeLayout android:id="@+id/m_layout_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_below="@+id/layout_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_1b1b1b"
            android:text="男"/>
        <ImageView android:id="@+id/m_iv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@mipmap/img_cart_check_true"/>
    </RelativeLayout>
    <View android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:layout_below="@+id/m_layout_one"
        android:background="@color/color_ededed"/>
    <RelativeLayout android:id="@+id/m_layout_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:layout_below="@+id/view_line_one">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_1b1b1b"
            android:text="女"/>
        <ImageView android:id="@+id/m_iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@mipmap/img_cart_check_true"/>
    </RelativeLayout>
    <View android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:layout_below="@+id/m_layout_two"
        android:background="@color/color_ededed"/>
    <RelativeLayout android:id="@+id/m_layout_three"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:layout_below="@+id/view_line_two">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_1b1b1b"
            android:text="保密"/>
        <ImageView android:id="@+id/m_iv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@mipmap/img_cart_check_true"/>
    </RelativeLayout>

</RelativeLayout>
