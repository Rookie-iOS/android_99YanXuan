<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <include
        android:id="@+id/layout_top"
        layout="@layout/include_title_layout"/>

    <!--头像-->
    <RelativeLayout android:id="@+id/m_layout_user_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="头像"/>

        <ImageView android:id="@+id/iv_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/img_jiantou_right_block" />

        <ImageView android:id="@+id/m_iv_user_head"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_toLeftOf="@+id/iv_jiantou"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_head_border_white_select"
            android:layout_marginRight="7dp"
            android:src="@mipmap/img_shop_default_head"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_layout_user_head"
        android:background="@color/color_ededed"/>

    <!--昵称-->
    <RelativeLayout android:id="@+id/m_layout_user_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view_line_one"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="昵称"/>

        <TextView android:id="@+id/m_tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_8a8c8f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:drawableRight="@mipmap/img_jiantou_right_block"
            android:gravity="center_vertical"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:text="dsadsa"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_layout_user_nickname"
        android:background="@color/color_ededed"/>

    <!--性别-->
    <RelativeLayout android:id="@+id/m_layout_user_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view_line_two">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="性别"/>

        <TextView android:id="@+id/m_tv_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_8a8c8f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:drawableRight="@mipmap/img_jiantou_right_block"
            android:gravity="center_vertical"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:text="dsadsa"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_three"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_layout_user_sex"
        android:background="@color/color_ededed"/>

    <!--生日-->
    <RelativeLayout android:id="@+id/m_layout_user_birthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view_line_three">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="生日"/>

        <TextView android:id="@+id/m_tv_user_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_8a8c8f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:drawableRight="@mipmap/img_jiantou_right_block"
            android:gravity="center_vertical"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:text="dsadsa"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_four"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_layout_user_birthday"
        android:background="@color/color_ededed"/>

    <!--手机号-->
    <RelativeLayout android:id="@+id/m_layout_user_mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view_line_four">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="手机号"/>

        <TextView android:id="@+id/m_tv_user_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_8a8c8f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:text="dsadsa"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_five"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_layout_user_mobile"
        android:background="@color/color_ededed"/>

    <!--真实姓名-->
    <RelativeLayout android:id="@+id/m_layout_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view_line_five">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="真实姓名"/>

        <TextView android:id="@+id/m_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_8a8c8f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/img_jiantou_right_block"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:text="dsadsa"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_six"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/m_layout_user_name"
        android:background="@color/color_ededed"/>

    <!--所属地区-->
    <RelativeLayout android:id="@+id/m_layout_user_city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/view_line_six">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_1b1b1b"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="所属地区"/>

        <TextView android:id="@+id/m_tv_user_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_shop_text_size"
            android:textColor="@color/color_8a8c8f"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/img_jiantou_right_block"
            android:drawablePadding="7dp"
            android:layout_marginRight="15dp"
            android:text="dsadsa"/>
    </RelativeLayout>

    <include
        android:id="@+id/m_view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/include_loading_layout"
        android:layout_below="@+id/layout_top"
        android:visibility="gone"/>

</RelativeLayout>
