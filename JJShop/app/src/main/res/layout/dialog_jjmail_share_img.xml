<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/yuanjiao_white_select"
    android:paddingBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_share_img_close"
        android:layout_alignRight="@+id/iv_share"
        android:layout_alignTop="@+id/iv_share"
        />


    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/iv_share"
        android:drawableLeft="@drawable/dialog_share_bt_wx"
        android:text="微信好友"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_solid_green_corners_10"
        android:layout_below="@+id/iv_share"
        android:gravity="center"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朋友圈"
        android:textColor="@android:color/white"
        android:layout_below="@+id/iv_share"
        android:layout_alignRight="@+id/iv_share"
        android:gravity="center"
        android:textSize="14sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/dialog_share_bt_pyq"
        android:background="@drawable/shape_solid_green_corners_10"
        />
    </RelativeLayout>
</ScrollView>